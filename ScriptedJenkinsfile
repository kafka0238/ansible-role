node("linux"){
    stage("Git checkout"){
        git credentialsId: '5ac0095d-0185-431b-94da-09a0ad9b0e2c', url: 'git@github.com:kafka0238/ansible-role.git'
    }
    stage("Run playbook"){
        sh 'ansible-galaxy install -r requirements.yml -p roles --force'
        if (var.prod_run){
            sh 'ansible-playbook site.yml -i inventory/prod'
        }
        else{
            sh 'ansible-playbook site.yml -i inventory/prod --check --diff'
        }

    }
}